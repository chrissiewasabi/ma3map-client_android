<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"/>
    <LinearLayout
        android:id="@+id/interaction_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#eeeeee"
        android:elevation="1dp">
        <RelativeLayout
            android:id="@+id/route_selection_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:elevation="2dp">
            <RelativeLayout
                android:id="@+id/from_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp">
                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/from_color"/>
                <AutoCompleteTextView
                    android:id="@+id/from_actv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingRight="60dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/from"
                    android:background="@android:color/transparent"
                    android:inputType="textNoSuggestions|textCapWords"/>
                <Button
                    android:id="@+id/from_drop_pin_b"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_action_drop_pin"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/from_location_b"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/ic_action_locate"
                    android:visibility="gone"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/to_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from_rl"
                android:layout_centerHorizontal="true"
                android:padding="10dp">
                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/to_color"/>
                <AutoCompleteTextView
                    android:id="@+id/to_actv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingRight="60dp"
                    android:paddingLeft="30dp"
                    android:hint="@string/to"
                    android:background="@android:color/transparent"
                    android:inputType="textNoSuggestions|textCapWords"/>
                <Button
                    android:id="@+id/to_drop_pin_b"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_action_drop_pin"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/to_location_b"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/ic_action_locate"
                    android:visibility="gone"/>
            </RelativeLayout>
            <Button
                android:id="@+id/search_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/to_rl"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:textColor="@color/accent"
                android:text="@string/search"/>
        </RelativeLayout>
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/navigate_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:padding="30dp"
        android:elevation="2dp"/>

</FrameLayout>
